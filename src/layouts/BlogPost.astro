---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { Breadcrumbs } from "astro-breadcrumbs";

type Props = CollectionEntry<"blog">["data"];

const { title, description, date } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description ?? "The first and oldest makerspace in CT!"} />
        <style lang="scss">
            title > h1 {
                margin-bottom: 0.5em;
            }
            .prose {
                display: flex;
                flex-wrap: wrap;
                flex-direction: column;
                align-content: flex-start;
                gap: 1rem;
                width: 100%;
            }
        </style>
    </head>

    <body itemscope itemtype="http://schema.org/WebPage">
        <Header />
        <main itemscope itemtype="http://schema.org/Blog">
            <Breadcrumbs ariaLabel="a structured list of navigatio links" />
            <article
            itemscope
            itemtype="https://schema.org/BlogPosting"
            itemprop=""
            >
            <h1 itemscope itemprop="headline">{title}</h1>
                <div class="hero-image">
                    {/* 
                        heroImage && (
                            <img
                                width={1020}
                                height={510}
                                src={heroImage}
                                alt=""
                            />
                        )
                    }
                    */} 
                </div>
                <div class="prose">
                    <div class="title">
                        <div class="date">
                            <FormattedDate date={date} />
                            {
                                date && (
                                    <div class="last-updated-on">
                                        Last updated on{" "}
                                        <FormattedDate date={date} />
                                    </div>
                                )
                            }
                        </div>
                        <hr />
                    </div>
                    <slot itemscope itemprop="articleBody"/>
                </div>
            </article>
        </main>
        <Footer />
    </body>
</html>
